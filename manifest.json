{
  "manifest_version": 2,

  "name": "Scratch Messages",
  "description": "This extension allows you to easily see your Scratch messages",
  "version": "1.0",

  "background": {
    "scripts": ["bg.js"]
  },
  "content_security_policy": "script-src 'self' https://scratch.mit.edu https://*.scratch.mit.edu; object-src 'self';",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "cookies",
    "https://scratch.mit.edu/",
    "https://api.scratch.mit.edu/"
  ]
}
