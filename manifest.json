{
  "manifest_version": 2,

  "name": "Scratch Messages",
  "description": "This extension allows you to easily see your Scratch messages",
  "version": "1.0",
  
  "background": {
    "scripts": ["bg.js"]
  },
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://scratch.mit.edu/",
    "http://scratch.mit.edu/"
  ]
}